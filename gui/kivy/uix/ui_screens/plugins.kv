Popup:
    title: _('Plugins')
    id: popup
    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 2
            size_hint: 1, None
            height: '100dp'
            id: plugins_list
            on_parent:
                app.show_plugins(plugins_list)

        Widget:
            size_hint: 1, 1

        BoxLayout:
            Widget:
                size_hint: 0.5, None
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('OK')
                on_release:
                    popup.dismiss()

