Popup:
    id: settings
    title: _('Settings')

    BoxLayout:

        orientation: 'vertical'

        GridLayout:
            cols: 2
            size_hint: 1, None
            Label:
                text: _('Base unit')
                height: '48dp'
                size_hint: 1, None
            Spinner:
                text: app.base_unit
                values: ('BTC', 'mBTC')
                size_hint: 1, None
                height: '48dp'
                on_text: app.base_unit = self.text

            Label:
                size_hint: 1, None
                text: 'OpenAlias'
                height: '48dp'
            TextInput:
                size_hint: 1, None
                height: '48dp'
                multiline: False
        Button:
            size_hint: 1, None
            height: '48dp'
            text: _('Close')
            on_release: settings.dismiss()

        Widget:
            size_hint: 1, 0.8

