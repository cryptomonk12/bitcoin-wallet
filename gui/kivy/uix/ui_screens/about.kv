        orientation: 'vertical'
        spacing: '1dp'
        Label:
            text: "Lightweight Bitcoin Wallet"
            size_hint_y: None
        GridLayout:
            cols: 2
            Label:
                text: 'Licence:'
                text_size: self.size
            Label:
                text: "Gnu GPL v3"
                text_size: self.size
            Label:
