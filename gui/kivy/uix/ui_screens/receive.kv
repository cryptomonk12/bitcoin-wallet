#:import _ electrum.i18n._
#:import Decimal decimal.Decimal
#:set btc_symbol unichr(171)
#:set mbtc_symbol unichr(187)
#:set font_light 'data/fonts/Roboto-Condensed.ttf'



ReceiveScreen:
    id: receive_screen
    name: 'receive'

    BoxLayout
        padding: '12dp', '12dp', '12dp', '12dp'
        spacing: '12dp'
        orientation: 'vertical'
        size_hint: 1, 1

        FloatLayout:
            id: bl
            QRCodeWidget:
                id: qr
                size_hint: None, 1
                width: min(self.height, bl.width)
                pos_hint: {'center': (.5, .5)}
                on_touch_down:
                    if self.collide_point(*args[1].pos):\
                    app.show_info_bubble(icon=self.ids.qrimage.texture, text='texture')

        GridLayout:
            id: grid
            cols: 2
            Label:
                text: 'Address'
                size_hint: 0.5, None
                height: '38dp'
            AddressSelector:
                id: address
                size_hint: 0.5, None
                height: '38dp'
            Label:
                text: 'Amount'
                size_hint: 0.5, None
                height: '38dp'
            Button:
                id: amount
                text: ''
                size_hint: 0.5, None
                height: '38dp'
                on_release: app.amount_dialog(amount, receive_screen.parent.update_qr)
            Label:
                text: 'Description'
                size_hint: 0.5, None
                height: '48dp'
            TextInput:
                text: ''
                on_text: receive_screen.parent.update_qr
                multiline: False
                size_hint: 0.5, None
                height: '38dp'
