#:import os os

Popup:
    title: _('Wallets')
    id: popup
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            size_hint_y: None
            cols: 2
            Label:
                height: '32dp'
                size_hint_y: None
                text: _('Wallet file') + ':'
            TextInput:
                id: text_input
                height: '32dp'
                size_hint_y: None
                text: os.path.basename(app.wallet.storage.path)

        FileChooserIconView:
            id: wallet_selector
            path: os.path.dirname(app.wallet.storage.path)
            on_selection: text_input.text = os.path.basename(self.selection[0]) if self.selection else ''
            size_hint: 1, 1

        BoxLayout:
            Widget:
                size_hint: 0.5, None
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('OK')
                on_release:
                    popup.dismiss()
